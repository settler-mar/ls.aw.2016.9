.autorisation-menu
    .autorisation-menu__title Авторизуйтесь
    form.form__form(method="post" action='autorisation')
        label.form__label
            +icon_font('user','form__input-icon')
            input.form__input(name="login",placeholder="Логин",required=true)
        label.form__label
            +icon_font('key','form__input-icon')
            input.form__input(name="password",type="password",placeholder="Пароль",required=true)
        label.form__label.form__label-checkbox
            input.form__checkbox(type="checkbox",name="capcha")
            +icon_font('check','form__checkbox-icon')
            span.form__checkbox_text Я человек
        div.form__radio-select
            .form__radio-question Вы точно не робот?
            label.form__radio-label
                input.form__radio-input(type="radio",name="recapcha",value=1)
                span.form__radio-control
                span.form__radio-ansvar Да
            label.form__radio-label
                input.form__radio-input(type="radio",checked,name="recapcha",value=2)
                span.form__radio-control
                span.form__radio-ansvar Не уверен
        nav.welcome-menu
            ul.welcome-menu__list
                li.welcome-menu__item
                    a.welcome-menu__link(href="#") На главную
                li.welcome-menu__item
                    input.welcome-menu__link.welcome-menu__link-input(name="autorisation",type="submit",value="Войти")